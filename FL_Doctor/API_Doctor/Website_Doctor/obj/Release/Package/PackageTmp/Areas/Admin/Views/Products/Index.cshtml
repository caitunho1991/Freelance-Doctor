@using Website_Doctor.Areas.Admin.Data
@model IQueryable<Product>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Quản lý chuyên khoa khám bệnh</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <a href="@Url.Action("CreateOrEdit","Products")" class="btn btn-success pull-right">
                            <i class="glyphicon glyphicon-plus"></i> Tạo mới
                        </a>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên chuyên khoa</th>
                                    <th>Mã chuyên khoa</th>
                                    <th>Phí khám/chữa bệnh</th>
                                    <th>Ngày tạo</th>
                                    <td>Trạng thái</td>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model.Count() > 0)
                                {
                                    var i = 0;
                                    foreach (var item in Model)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.name</td>
                                            <td>@item.code</td>
                                            <td>@item.price</td>
                                            <td>@item.dateCreate</td>
                                            <td>

                                                @if (item.isDelete == true)
                                                {
                                                    <span class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete</span>
                                                }
                                                else
                                                {
                                                    if (item.isActive == true)
                                                    {
                                                        <span class="btn btn-success btn-xs"><i class="fa fa-check"></i> Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="btn btn-warning btn-xs"><i class="fa fa-times"></i> De-active</span>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("CreateOrEdit","Products", new { code = item.code})">
                                                    <span class="btn btn-primary btn-xs"><i class="fa fa-eye"></i> Chi tiết</span>
                                                </a>
                                                @if (item.isDelete != true)
                                                {
                                                    <a href="@Url.Action("Delete","Products", new { code = item.code})">
                                                        <span class="btn btn-danger btn-xs"><i class="fa fa-trash"></i> Xóa</span>
                                                    </a>
                                                }
                                                
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7">Không có dữ liệu.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông báo</h4>
            </div>
            <div class="modal-body">
                <p>@TempData["MsgErr"]</p>
            </div>
        </div>

    </div>
</div>
@section scripts{
    <script>
        /****************************************
         *       Basic Table                   *
         ****************************************/
        $('#datatable').DataTable();
        if (!!@TempData["MsgErr"]) {
            $("#myModal").modal()
        }
    </script>
}
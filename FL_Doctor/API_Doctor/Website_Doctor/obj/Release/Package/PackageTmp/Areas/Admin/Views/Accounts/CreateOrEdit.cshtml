@using Website_Doctor.Areas.Admin.Models
@model VM_Account_Edit
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- bootstrap-daterangepicker -->
<link href="~/Theme/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Quản lý thông tin tài khoản</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @using (Html.BeginForm("Profile", "Accounts", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            if (Model != null)
                            {
                                @Html.HiddenFor(x => x.ID)
                            }
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Tên tài khoản:</label>
                                <div class="col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(x => x.FirstName, string.Empty, new { @class = "label label-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Họ và tên đệm tài khoản:</label>
                                <div class="col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(x => x.LastName, string.Empty, new { @class = "label label-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Email:</label>
                                <div class="col-sm-6 col-xs-12">
                                    @if (Model != null)
                                    {
                                        <p class="form-control">@Model.Email</p>
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "" })
                                        @Html.ValidationMessageFor(x => x.Email, string.Empty, new { @class = "label label-danger" })
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Số điện thoại:</label>
                                <div class="col-sm-6 col-xs-12">
                                    @if (Model != null)
                                    {
                                        <p class="form-control">@Model.PhoneNumber</p>
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", placeholder = "" })
                                        @Html.ValidationMessageFor(x => x.PhoneNumber, string.Empty, new { @class = "label label-danger" })
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Giới tính: </label>
                                <div class="col-sm-6 col-xs-12">
                                    @Html.RadioButtonFor(x => x.Sex, 1) Nam
                                    @Html.RadioButtonFor(x => x.Sex, 2) Nữ
                                    @Html.RadioButtonFor(x => x.Sex, 3) Khác
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Ngày sinh: </label>
                                <div class="col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control date-picker" })
                                </div>
                            </div>
                            if (Model != null)
                            {
                                <div class="form-group">
                                    <label class="control-label col-sm-3 col-xs-12">Số dư tài khoản: </label>
                                    <div class="col-sm-6 col-xs-12">
                                        <p class="form-control">@Model.Balance</p>
                                    </div>
                                </div>
                            }
                            <div class="form-group text-center">
                                <div class="col-sm-9 col-xs-12">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fa fa-save"></i> Lưu lại
                                    </button>
                                    <a class="btn btn-danger" href="@Url.Action("Index", "Products")">
                                        <i class="fa fa-times"></i> Hủy bỏ
                                    </a>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- bootstrap-daterangepicker -->
<script src="~/Theme/vendors/moment/min/moment.min.js"></script>
<script src="~/Theme/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>
<script>
    $(function () {
        $('.date-picker').daterangepicker({
            singleDatePicker: true,
            showDropdowns: true,
            minYear: 1901,
            maxYear: parseInt(moment().format('YYYY'), 10)
        });
    });
</script>
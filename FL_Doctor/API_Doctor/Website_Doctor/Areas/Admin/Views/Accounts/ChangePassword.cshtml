@using Website_Doctor.Areas.Admin.Models
@model VM_ChangePassword
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Quản lý thông tin tài khoản</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @using (Html.BeginForm("ChangePassword", "Accounts", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            if (Model != null)
                            {
                                @Html.HiddenFor(x => x.ID)
                            }
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Mật khẩu cũ:</label>
                                <div class="col-sm-6 col-xs-12">
                                    @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(x => x.OldPassword, string.Empty, new { @class = "label label-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Mật khẩu mới:</label>
                                <div class="col-sm-6 col-xs-12">
                                    @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(x => x.NewPassword, string.Empty, new { @class = "label label-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Mật khẩu mới:</label>
                                <div class="col-sm-6 col-xs-12">
                                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(x => x.ConfirmPassword, string.Empty, new { @class = "label label-danger" })
                                </div>
                            </div>

                            <div class="form-group text-center">
                                <div class="col-sm-9 col-xs-12">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fa fa-save"></i> Lưu lại
                                    </button>
                                    <a class="btn btn-danger" href="@Url.Action("Index", "Products")">
                                        <i class="fa fa-times"></i> Hủy bỏ
                                    </a>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông báo</h4>
            </div>
            <div class="modal-body">
                <p>@TempData["MsgErr"]</p>
            </div>
        </div>

    </div>
</div>
<script>
    $(function () {
        var model = "@TempData["MsgErr"]";
        if (!!model && model != "") {
            $("#myModal").modal({
                show: true
            });
        }
    });
</script>
@using Website_Doctor.Areas.Admin.Models
@model VM_Resources
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Quản lý resource</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @using (Html.BeginForm("CreateOrEdit", "Resources", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            if (Model != null)
                            {
                                @Html.HiddenFor(x => x.ID)
                            }
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Tên Resource:</label>
                                <div class="col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Tên Resource" })
                                    @Html.ValidationMessageFor(x => x.Name, string.Empty, new { @class = "label label-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Mã Resource:</label>
                                <div class="col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(x => x.Code, new { @class = "form-control", placeholder = "Mã Resource" })
                                    @Html.ValidationMessageFor(x => x.Code, string.Empty, new { @class = "label label-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Mô tả chuyên khoa khám bệnh:</label>
                                <div class="col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(x => x.Value, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(x => x.Value, string.Empty, new { @class = "label label-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Trạng thái: </label>
                                <div class="col-sm-6 col-xs-12">
                                    @if (Model != null && Model.Active == true)
                                    {
                                        @Html.CheckBoxFor(x => x.Active, new { @checked = "checked" })
                                    }
                                    else
                                    {
                                        @Html.CheckBoxFor(x => x.Active)
                                    }
                                </div>
                            </div>
                            <div class="form-group text-center">
                                <div class="col-sm-9 col-xs-12">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fa fa-save"></i> Lưu lại
                                    </button>
                                    <a class="btn btn-danger" href="@Url.Action("Index", "Resources")">
                                        <i class="fa fa-times"></i> Hủy bỏ
                                    </a>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
